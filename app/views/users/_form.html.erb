<%= form_for @user, remote true do |f| %>
    <%= f.label :name, "Name:" %>
    <%= f.text_field :name %>

    <%= f.label :email, "Email: " %>
    <%= f.text_field :email%>

    <%= f.label :password, "Password: " %>
    <%= f.password_field :password %>

    <%= f.submit :submit "Submit" %>
<% end %>